<% @title = _('Change your PIN used on {{site_name}}', :site_name => site_name) %>
<% raise _('internal error') if not @user %>

<div id="change_email">

<%= form_tag({:action => "signchangepin"}, {:id => "signchangepin_form"}) do %>
    <%= foi_error_messages_for :signchangepin %>

    <div class="form_note">
    <h1> <% _('Change your PIN used on {{site_name}}', :site_name => site_name) %></h1>
    </div>

    <label class="form_label" for="signchangepin_new_pin"> <%= _('New PIN:')%></label>
    <%= text_field 'signchangepin', 'national_id_number', { :value => @user.national_id_number, :size => 20 } %>

    <div class="form_button">
    <%= hidden_field_tag 'submitted_signchangepin_do', 1 %>
    <%= submit_tag _("Change PIN on {{site_name}}", :site_name=>site_name) %>
    </div>
<% end %>

</div>
